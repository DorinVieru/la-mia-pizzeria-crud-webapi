@{
    ViewData["Title"] = "Home Page";
    Layout = "_PizzeriaLayout";
}

@section JumboSection {
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="height: 50vh;">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner h-100">
            <div class="carousel-item active carousel-dark-overlay">
                <img src="~/img/about-1.jpg" class="w-100" alt="...">
                <div class="carousel-caption">
                    <h5 class="text-warning fs-4 fw-semibold">Fedeli alla Tradizione</h5>
                    <p class="fs-3 fw-bold">Conosciti attraverso il gusto unico della Tradizione</p>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-warning text-smallcaps fs-5 fw-semibold my-2">Esplora</a>
                </div>
            </div>
            <div class="carousel-item carousel-dark-overlay">
                <img src="~/img/jumbo-pizza.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption">
                    <h5 class="text-warning fs-4 fw-semibold">Pizza Bomba!</h5>
                    <p class="fs-3 fw-bold">Te ne innamori e non potrai più farne a meno</p>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-warning text-smallcaps fs-5 fw-semibold my-2">Esplora</a>
                </div>
            </div>
            <div class="carousel-item carousel-dark-overlay">
                <img src="~/img/about-2.jpg" class="d-block w-100" alt="...">
                <div class="carousel-caption">
                    <h5 class="text-warning fs-4 fw-semibold">La pizza che stavi cercando</h5>
                    <p class="fs-3 fw-bold">Assapora e goditi l'esperienza culinaria della pizza italiana</p>
                    <a href="@Url.Action("Index", "Pizza")" class="btn btn-warning text-smallcaps fs-5 fw-semibold my-2">Esplora</a>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}

@*CHI SIAMO*@
<div class="row py-3 my-5">
    <div class="col-12 col-md-6 mb-3 mb-md-0">
        <div class="row">
            <div class="col-6">
                <div>
                    <img src="~/img/about-1.jpg" alt="" class="card-img rounded-3" style="height:40vh; object-fit: cover;">
                </div>
            </div>
            <div class="col-6">
                <div class="d-flex flex-column justify-content-between h-100">
                    <img src="~/img/about-2.jpg" alt="" class="card-img rounded-3" style="height: 19vh; object-fit: cover;">
                    <img src="~/img/about-2.jpg" alt="" class="card-img rounded-3" style="height: 19vh; object-fit: cover;">
                </div>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center d-block d-md-none">
        <h3 class="border-bottom text-center border-danger w-50 mb-4 pb-2 px-3">Chi <span class="text-danger">siamo</span></h3>
    </div>
    <div class="col-12 col-md-6">
        <div class="d-flex flex-column justify-content-center h-100">
            <h3 class="border-bottom border-danger w-50 mb-4 pb-2 px-3 d-none d-md-block">Chi <span class="text-danger">siamo</span></h3>
            <h4 class="px-3">Un'esperienza del gusto che non dimenticherai facilmente</h4>
            <p class="px-3">
                Benvenuti nella nostra autentica pizzeria italiana, dove l'amore per la tradizione e la passione per gli ingredienti di qualità si incontrano per creare un'esperienza culinaria indimenticabile. <br />
                Noi di <em>Pizza Bomba</em> Ci impegniamo a offrire ai nostri ospiti un viaggio gastronomico attraverso i sapori autentici dell'Italia. <br />
                Utilizziamo solo prodotti locali e ingredienti freschi, accuratamente selezionati ogni giorno per garantire la massima qualità e autenticità in ogni morso. <br />
                La nostra farina è scelta con cura per garantire una base leggera e croccante, mentre i nostri sughi sono preparati in casa con ricette tradizionali che si tramandano da generazioni.
            </p>
        </div>
    </div>
</div>

@*PROMOZIONI*@
